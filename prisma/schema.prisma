generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String
  avatar_url    String?
  createdAt     DateTime  @default(now())
  
  projects      Project[]
  
  @@map("users")
}

model Project {
  id              String    @id @default(uuid())
  userId          String
  name            String
  build_status    String?   // e.g., "pending", "success", "failed"
  source_code_url String?   // optional path to the generated .zip file
  createdAt       DateTime  @default(now())
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  pages           Page[]

  @@map("projects")
}

model Page {
  id          String   @id @default(uuid())
  projectId   String
  name        String   // e.g., "Home", "Dashboard"
  slug        String   // e.g., "/", "/dashboard"
  schema_json Json     // Stores the entire AST generated by dnd-kit
  createdAt   DateTime @default(now())

  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("pages")
}

model ComponentLibrary {
  id                  String @id @default(uuid())
  name                String // e.g., "ButtonPrimary", "Navbar"
  default_schema_json Json   // Base structure with default Tailwind properties

  @@map("component_library")
}